<div class="navbar navbar-default" role="navigation">
    <%= link_to "Random", test_path(:order => "RANDOM"), { :class => "btn btn-default" } %>
    <%= link_to "Alphabetical", test_path(:order => "ALPHA"), { :class => "btn btn-default" } %>
    <%= link_to "TimeAdded", test_path(:order => "TIME"), { :class => "btn btn-default" } %>
</div>

<% @words.each_with_index do |word, i| %>
    <div class="row">
        <div class="col-sm-4 word-spelling bg-info" data-index="<%= i %>">
            <%= word.spelling %>
        </div>
        <div class="col-sm-8 bg-danger word-spelling" id="word-definition-<%= i %>" style="display:none">
            <%= word.definition %>
        </div>
    </div>
<% end %>

<div id="click-counter">
    <div id="click"></div>
    <div id="total">/ <%= @words.size %></div>
</div>

